{
  "npm.packageManager": "yarn",
  "npm.runSilent": true,
  "editor.tabSize": 2,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "vue",
    "javascript",
    "javascriptreact"
  ],
  "eslint.codeActionsOnSave.mode": "problems",
  "eslint.debug": true,
  "eslint.workingDirectories": [
    {
      "directory": "./frontend/"
    },
    {
      "directory": "./backend/"
    },
    {
      "directory": "./charts/"
    },
    {
      "pattern": "./packages/*/"
    }
  ],
  "search.exclude": {
    "**/.pnp.*": true,
    "**/.yarn/*.*": true,
    "**/.yarn/cache/**": true,
    "**/.yarn/releases/**": true,
    "**/.yarn/sdks/**": true,
    "**/.yarn/unplugged/**": true,
    "**/.yarn/versions/**": true,
    "**/dist": true
  },
  "eslint.nodePath": ".yarn/sdks",
  "files.exclude": {
    "logo": true,
    "LICENSES": true,
    "**/node_modules": true,
    "**/coverage": true,
    "**/dist": true
  },
  "jestrunner.changeDirectoryToWorkspaceRoot": false,
  "jestrunner.vitestCommand": "./scripts/test.cjs --runner=vitest",
  "jestrunner.vitestDebugOptions": {
    "env": { "VS_DEBUG": "1" }
  },
  "jestrunner.jestCommand": "./scripts/test.cjs --runner=jest",
  "jestrunner.debugOptions": {
    "env": { "VS_DEBUG": "1" }
  }
}
